.container {
  padding: 0 24rpx 24rpx;
}

.notice {
  margin-top: 16rpx;
  padding: 16rpx;
  border: 1px dashed #f59e0b;
  background: #fffbeb;
  border-radius: 12rpx;
  color: #92400e;
  font-size: 26rpx;
}

.slide {
  margin-top: 16rpx;
  width: 100%;
  height: 320rpx;
  border-radius: 20rpx;
  background: #f5f5f5;
}

.actions {
  margin-top: 16rpx;
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.error {
  margin-top: 16rpx;
  color: #b91c1c;
  word-break: break-all;
}

.section {
  margin-top: 24rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.coupon {
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.coupon-left {
  flex: 1;
}

.coupon-name {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.coupon-sub {
  font-size: 24rpx;
  color: #666;
}

.coupon-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: center;
  gap: 10rpx;
}

.coupon-price {
  font-size: 32rpx;
  font-weight: 700;
  color: #a00000;
}

.coupon-action {
  padding: 8rpx 18rpx;
  border-radius: 999rpx;
  background: #fff4ea;
  color: #a00000;
  font-size: 24rpx;
  border: 1px solid #f0e0d2;
}

.coupon-action.used {
  background: #eee;
  border-color: #ddd;
  color: #666;
}

.card {
  margin-top: 24rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 20rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.json {
  font-family: monospace;
  font-size: 24rpx;
  white-space: pre-wrap;
  word-break: break-all;
}
