.container {
  padding: 0 24rpx 24rpx;
}

.notice {
  margin-top: 16rpx;
  padding: 16rpx;
  border: 1px dashed #f59e0b;
  background: #fffbeb;
  border-radius: 12rpx;
  color: #92400e;
  font-size: 26rpx;
}

.filters {
  padding: 16rpx 0;
  display: flex;
  gap: 16rpx;
}

.filter-item {
  flex: 1;
  background: #f5f5f5;
  border-radius: 16rpx;
  padding: 16rpx 20rpx;
  font-size: 26rpx;
  color: #333;
}

.empty {
  padding: 48rpx 0;
  text-align: center;
  color: #999;
}

.item {
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.item-img {
  width: 200rpx;
  height: 165rpx;
  border-radius: 16rpx;
  background: #f5f5f5;
}

.item-main {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.item-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-sub {
  font-size: 24rpx;
  color: #747474;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 6rpx;
}

.footer {
  padding: 24rpx 0;
  text-align: center;
  color: #999;
  font-size: 26rpx;
}

