.tickets-page {
  min-height: 100vh;
  padding: 0 24rpx 24rpx;
}

.notice {
  margin-top: 16rpx;
  padding: 16rpx;
  border: 1px dashed #f59e0b;
  background: #fffbeb;
  border-radius: 12rpx;
  color: #92400e;
  font-size: 26rpx;
}

.filter-bar {
  position: sticky;
  top: 0;
  z-index: 8;
  margin-top: 16rpx;
  padding: 16rpx;
  display: flex;
  gap: 12rpx;
}

.filter-item {
  flex: 1;
  background: #f5f5f5;
  border-radius: 14rpx;
  padding: 14rpx 16rpx;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.filter-label {
  font-size: 22rpx;
  color: #9ca3af;
}

.filter-value {
  font-size: 26rpx;
  color: #111827;
  font-weight: 600;
}

.empty {
  padding: 48rpx 0;
  text-align: center;
  color: #999;
}

.ticket-list {
  margin-top: 18rpx;
}

.ticket-item {
  padding: 20rpx;
  display: flex;
  gap: 20rpx;
  margin-bottom: 18rpx;
}

.ticket-img {
  width: 210rpx;
  height: 170rpx;
  border-radius: 16rpx;
  background: #f5f5f5;
  flex-shrink: 0;
}

.ticket-main {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  min-width: 0;
}

.ticket-title {
  font-size: 31rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.ticket-sub {
  font-size: 24rpx;
  color: #6b7280;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 7rpx;
}

.ticket-price-row {
  margin-top: 2rpx;
  display: flex;
  align-items: baseline;
  gap: 4rpx;
}

.ticket-price {
  font-size: 30rpx;
  color: #932027;
  font-weight: 600;
}

.ticket-price-suffix {
  font-size: 24rpx;
  color: #6b7280;
}
