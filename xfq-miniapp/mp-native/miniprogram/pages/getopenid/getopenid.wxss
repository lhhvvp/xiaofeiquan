.auth-page {
  min-height: 100vh;
  background: #f7f7f7;
}

.hero {
  height: 430rpx;
  background: linear-gradient(155deg, #8f1d22 0%, #b0252d 58%, #c73730 100%);
  position: relative;
}

.hero-overlay {
  position: absolute;
  width: 100%;
  height: 100%;
  background:
    radial-gradient(circle at 76% 22%, rgba(255, 255, 255, 0.24) 0, rgba(255, 255, 255, 0) 40%),
    radial-gradient(circle at 18% 78%, rgba(255, 255, 255, 0.18) 0, rgba(255, 255, 255, 0) 48%);
}

.hero-main {
  position: relative;
  z-index: 1;
  padding-top: 126rpx;
  text-align: center;
}

.hero-title {
  color: #fff;
  font-size: 42rpx;
  font-weight: 700;
}

.hero-subtitle {
  margin-top: 12rpx;
  color: rgba(255, 255, 255, 0.92);
  font-size: 26rpx;
}

.card {
  margin: -86rpx 24rpx 0;
  padding: 30rpx 26rpx;
}

.card-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #111827;
}

.card-sub {
  margin-top: 8rpx;
  color: #6b7280;
  font-size: 24rpx;
}

.notice {
  margin-top: 18rpx;
  padding: 16rpx;
  border: 1px dashed #f59e0b;
  background: #fffbeb;
  border-radius: 12rpx;
  color: #92400e;
  font-size: 25rpx;
}

.kv {
  margin-top: 18rpx;
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
}

.kv-label {
  width: 130rpx;
  color: #6b7280;
  font-size: 25rpx;
  flex-shrink: 0;
}

.kv-value {
  color: #111827;
  font-size: 25rpx;
}

.kv-value.multi {
  word-break: break-all;
  line-height: 1.5;
}

.auth-btn {
  margin-top: 30rpx;
  height: 86rpx;
  line-height: 86rpx;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #991b1b 0%, #c53030 100%);
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
}

.auth-btn::after {
  border: none;
}

.status {
  margin-top: 16rpx;
  font-size: 25rpx;
  color: #4b5563;
}

.error {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #b91c1c;
  word-break: break-all;
}
