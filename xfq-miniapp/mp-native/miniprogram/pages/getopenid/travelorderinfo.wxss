.travel-order-page {
  min-height: 100vh;
  padding: 20rpx 24rpx 24rpx;
  background: linear-gradient(180deg, #ae000d 0%, #f7f7f7 260rpx, #f7f7f7 100%);
}

.notice {
  margin-top: 16rpx;
  padding: 16rpx;
  border: 1px dashed #f59e0b;
  background: #fffbeb;
  border-radius: 12rpx;
  color: #92400e;
  font-size: 26rpx;
}

.status {
  margin-top: 40rpx;
  margin-left: 8rpx;
  color: #fff;
  font-size: 42rpx;
  font-weight: 700;
}

.card {
  margin-top: 16rpx;
  padding: 20rpx;
}

.price-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 34rpx;
  font-weight: 700;
  border-bottom: 1px solid #f3f4f6;
  padding-bottom: 18rpx;
}

.price {
  color: #a00000;
}

.price::before {
  content: 'ï¿¥';
  font-size: 22rpx;
}

.product {
  margin-top: 18rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-title {
  flex: 1;
  font-size: 30rpx;
  color: #111827;
  font-weight: 700;
  line-height: 1.35;
}

.number {
  color: #9ca3af;
  font-size: 24rpx;
}

.content-row {
  margin-top: 14rpx;
  display: flex;
  align-items: flex-start;
  gap: 10rpx;
}

.label {
  width: 90rpx;
  color: #9ca3af;
  font-size: 24rpx;
}

.value {
  flex: 1;
  color: #111827;
  font-size: 24rpx;
  word-break: break-all;
}

.copy {
  color: #9ca3af;
  font-size: 24rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #111827;
  margin-bottom: 12rpx;
}

.section-title.mt {
  margin-top: 20rpx;
}

.tour-row {
  padding: 14rpx 0;
  border-bottom: 1px solid #f3f4f6;
}

.tour-row:last-child {
  border-bottom: none;
}

.tour-name {
  font-size: 28rpx;
  color: #111827;
  font-weight: 600;
}

.tour-mobile {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.bottom-space {
  height: 130rpx;
}

.bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 18rpx 24rpx 26rpx;
  background: linear-gradient(180deg, rgba(247, 247, 247, 0) 0%, #f7f7f7 40%);
}

.pay-btn {
  text-align: center;
  color: #fff;
  background: #a00000;
  border-radius: 12rpx;
  padding: 18rpx 12rpx;
  font-size: 30rpx;
  font-weight: 600;
}

.loading {
  margin-top: 16rpx;
  text-align: center;
  color: #6b7280;
  font-size: 24rpx;
}

.error {
  margin-top: 12rpx;
  color: #b91c1c;
  font-size: 22rpx;
  word-break: break-all;
}
