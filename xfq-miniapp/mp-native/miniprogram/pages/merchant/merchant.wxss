.merchant-page {
  min-height: 100vh;
  padding: 0 24rpx 24rpx;
}

.notice {
  margin-top: 16rpx;
  padding: 16rpx;
  border: 1px dashed #f59e0b;
  background: #fffbeb;
  border-radius: 12rpx;
  color: #92400e;
  font-size: 26rpx;
}

.top-card {
  position: sticky;
  top: 0;
  z-index: 8;
  margin-top: 16rpx;
  padding: 16rpx 18rpx;
}

.search {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.search-icon {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background: #fdf2f2;
  color: #a00000;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.search-box {
  flex: 1;
  background: #f5f5f5;
  border-radius: 999rpx;
  padding: 15rpx 24rpx;
  font-size: 26rpx;
  color: #999;
}

.tabs {
  white-space: nowrap;
  padding: 16rpx 0 4rpx;
}

.tab {
  display: inline-block;
  padding: 11rpx 22rpx;
  background: #f5f5f5;
  color: #666;
  border-radius: 999rpx;
  font-size: 24rpx;
  margin-right: 14rpx;
}

.tab.active {
  background: #a00000;
  color: #fff;
}

.merchant-list {
  margin-top: 18rpx;
}

.merchant-item {
  margin-bottom: 18rpx;
  padding: 20rpx;
  display: flex;
  gap: 20rpx;
}

.merchant-img {
  width: 210rpx;
  height: 170rpx;
  border-radius: 16rpx;
  background: #f5f5f5;
  flex-shrink: 0;
}

.merchant-main {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  min-width: 0;
}

.merchant-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 10rpx;
}

.merchant-name {
  font-size: 31rpx;
  font-weight: 600;
  max-width: 72%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.merchant-distance {
  font-size: 23rpx;
  color: #6b7280;
  min-width: 110rpx;
  text-align: right;
}

.merchant-sub {
  font-size: 24rpx;
  color: #6b7280;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 7rpx;
}
