.container {
  padding: 0 24rpx 24rpx;
}

.notice {
  margin-top: 16rpx;
  padding: 16rpx;
  border: 1px dashed #f59e0b;
  background: #fffbeb;
  border-radius: 12rpx;
  color: #92400e;
  font-size: 26rpx;
}

.search {
  padding: 16rpx 0;
}

.search-box {
  background: #f5f5f5;
  border-radius: 16rpx;
  padding: 16rpx 20rpx;
  font-size: 28rpx;
  color: #999;
}

.tabs {
  white-space: nowrap;
  padding: 8rpx 0 16rpx;
}

.tab {
  display: inline-block;
  padding: 12rpx 20rpx;
  background: #f5f5f5;
  color: #666;
  border-radius: 999rpx;
  font-size: 26rpx;
  margin-right: 16rpx;
}

.tab.active {
  background: #a00000;
  color: #fff;
}

.empty {
  padding: 48rpx 0;
  text-align: center;
  color: #999;
}

.item {
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.item-img {
  width: 200rpx;
  height: 165rpx;
  border-radius: 16rpx;
  background: #f5f5f5;
}

.item-main {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.item-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 10rpx;
}

.item-name {
  font-size: 30rpx;
  font-weight: 600;
  max-width: 70%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-distance {
  font-size: 22rpx;
  color: #999;
  min-width: 120rpx;
  text-align: right;
}

.item-sub {
  font-size: 24rpx;
  color: #747474;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 6rpx;
}

.footer {
  padding: 24rpx 0;
  text-align: center;
  color: #999;
  font-size: 26rpx;
}
