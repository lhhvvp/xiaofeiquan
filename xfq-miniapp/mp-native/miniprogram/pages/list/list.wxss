.coupon-page {
  min-height: 100vh;
  padding: 24rpx 24rpx 30rpx;
  background: #a00000;
  background-repeat: no-repeat;
  background-size: 100% auto;
}

.notice {
  margin-top: 16rpx;
  padding: 16rpx;
  border: 1px dashed #f59e0b;
  background: #fffbeb;
  border-radius: 12rpx;
  color: #92400e;
  font-size: 26rpx;
}

.container {
  margin-top: 460rpx;
  padding: 24rpx 20rpx;
  background: #fffce1;
  box-shadow: 0 14rpx 36rpx rgba(0, 0, 0, 0.08);
}

.title-box {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
}

.line {
  width: 96rpx;
  height: 18rpx;
  background: linear-gradient(90deg, #facc15 0%, #fb7185 100%);
  border-radius: 999rpx;
}

.line.reverse {
  transform: scaleX(-1);
}

.title {
  margin: 0 16rpx;
  font-size: 40rpx;
  font-weight: 800;
  color: #a00000;
}

.coupon-list {
  margin-top: 6rpx;
}

.coupon-item {
  margin-top: 14rpx;
  background: linear-gradient(180deg, #fff 0%, #fff8ef 100%);
  border-radius: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  overflow: hidden;
}

.left {
  flex: 1;
  min-width: 0;
  padding: 18rpx;
}

.left-title {
  font-size: 30rpx;
  color: #111827;
  font-weight: 700;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.left-sub {
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #a00000;
  font-weight: 700;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.right {
  width: 170rpx;
  border-left: 1px dashed #fca5a5;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 12rpx;
}

.btn {
  min-width: 126rpx;
  text-align: center;
  color: #fff;
  font-size: 26rpx;
  font-weight: 700;
  padding: 10rpx 12rpx;
  border-radius: 999rpx;
  background: linear-gradient(49deg, #e51612 0%, #f96045 50%, #e51612 100%);
}

.error {
  margin-top: 12rpx;
  color: #fee2e2;
  font-size: 22rpx;
  word-break: break-all;
}
