.line-info-page {
  min-height: 100vh;
}

.notice {
  margin: 16rpx 24rpx 0;
  padding: 16rpx;
  border: 1px dashed #f59e0b;
  background: #fffbeb;
  border-radius: 12rpx;
  color: #92400e;
  font-size: 26rpx;
}

.content-wrap {
  padding-bottom: 24rpx;
}

.banner {
  width: 100%;
  display: block;
}

.card {
  margin: 16rpx 24rpx 0;
  padding: 20rpx;
}

.title {
  font-size: 34rpx;
  font-weight: 700;
  color: #111827;
  line-height: 1.35;
}

.tag-list {
  margin-top: 14rpx;
}

.tag {
  display: inline-block;
  margin-right: 12rpx;
  margin-bottom: 10rpx;
  padding: 6rpx 12rpx;
  border-radius: 10rpx;
  background: #a00000;
  color: #fff;
  font-size: 20rpx;
}

.meta {
  margin-top: 12rpx;
  color: #6b7280;
  font-size: 24rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #111827;
  margin-bottom: 14rpx;
}

.plain-text {
  font-size: 26rpx;
  color: #374151;
  line-height: 1.7;
  word-break: break-all;
}

.photo-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.photo-item {
  width: 32%;
  height: 220rpx;
  margin-bottom: 10rpx;
  border-radius: 10rpx;
}

.loading {
  margin-top: 16rpx;
  text-align: center;
  color: #6b7280;
  font-size: 24rpx;
}

.error {
  margin: 12rpx 24rpx 0;
  color: #b91c1c;
  font-size: 22rpx;
  word-break: break-all;
}
