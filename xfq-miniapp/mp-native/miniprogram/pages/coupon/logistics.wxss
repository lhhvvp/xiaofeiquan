.logistics-page {
  min-height: 100vh;
  padding: 20rpx 24rpx 24rpx;
}

.notice {
  margin-top: 16rpx;
  padding: 16rpx;
  border: 1px dashed #f59e0b;
  background: #fffbeb;
  border-radius: 12rpx;
  color: #92400e;
  font-size: 26rpx;
}

.card {
  margin-top: 16rpx;
  padding: 18rpx 20rpx;
}

.meta-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
  margin-top: 8rpx;
}

.meta-row:first-child {
  margin-top: 0;
}

.meta-label {
  font-size: 24rpx;
  color: #6b7280;
}

.meta-value {
  flex: 1;
  text-align: right;
  font-size: 24rpx;
  color: #111827;
  word-break: break-all;
}

.timeline {
  margin-top: 16rpx;
  padding: 10rpx 18rpx;
}

.node {
  display: flex;
  gap: 10rpx;
  padding: 14rpx 0;
}

.left {
  width: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.dot {
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  background: #d1d5db;
}

.node.latest .dot {
  background: #a00000;
}

.line {
  width: 2rpx;
  flex: 1;
  background: #e5e7eb;
  margin-top: 4rpx;
}

.right {
  flex: 1;
  min-width: 0;
}

.content {
  font-size: 26rpx;
  color: #111827;
  line-height: 1.5;
}

.node.latest .content {
  color: #a00000;
  font-weight: 600;
}

.location {
  margin-top: 6rpx;
  font-size: 22rpx;
  color: #6b7280;
}

.time {
  margin-top: 6rpx;
  font-size: 22rpx;
  color: #9ca3af;
}

.loading {
  margin-top: 16rpx;
  text-align: center;
  color: #6b7280;
  font-size: 24rpx;
}

.error {
  margin-top: 12rpx;
  color: #b91c1c;
  font-size: 22rpx;
  word-break: break-all;
}
