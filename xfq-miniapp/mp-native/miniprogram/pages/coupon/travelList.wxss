.travel-list-page {
  min-height: 100vh;
  padding: 20rpx 24rpx 24rpx;
}

.notice {
  margin-top: 16rpx;
  padding: 16rpx;
  border: 1px dashed #f59e0b;
  background: #fffbeb;
  border-radius: 12rpx;
  color: #92400e;
  font-size: 26rpx;
}

.list {
  margin-top: 10rpx;
}

.item {
  margin-top: 16rpx;
  overflow: hidden;
}

.cover {
  width: 100%;
  height: 280rpx;
  display: block;
}

.main {
  padding: 16rpx 18rpx 18rpx;
}

.title {
  font-size: 30rpx;
  color: #111827;
  font-weight: 700;
  line-height: 1.35;
}

.tags {
  margin-top: 10rpx;
}

.tags text {
  display: inline-block;
  margin-right: 10rpx;
  margin-bottom: 8rpx;
  background: #fef2f2;
  border: 1px solid #fecaca;
  color: #991b1b;
  font-size: 20rpx;
  border-radius: 8rpx;
  padding: 4rpx 10rpx;
}

.footer {
  margin-top: 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price {
  font-size: 34rpx;
  color: #a00000;
  font-weight: 700;
}

.price::before {
  content: 'ï¿¥';
  font-size: 22rpx;
}

.access {
  font-size: 22rpx;
  color: #9ca3af;
}

.error {
  margin-top: 12rpx;
  color: #b91c1c;
  font-size: 22rpx;
  word-break: break-all;
}
