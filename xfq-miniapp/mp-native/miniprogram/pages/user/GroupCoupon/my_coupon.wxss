.group-coupon-page {
  min-height: 100vh;
  padding: 20rpx 24rpx 24rpx;
  background: linear-gradient(180deg, #ae000d 0%, #f7f7f7 280rpx, #f7f7f7 100%);
}

.notice {
  margin-top: 16rpx;
  padding: 16rpx;
  border: 1px dashed #f59e0b;
  background: #fffbeb;
  border-radius: 12rpx;
  color: #92400e;
  font-size: 26rpx;
}

.card {
  margin-top: 16rpx;
  padding: 22rpx;
}

.title {
  font-size: 34rpx;
  font-weight: 700;
  text-align: center;
  color: #111827;
}

.sub {
  margin-top: 8rpx;
  text-align: center;
  font-size: 24rpx;
  color: #6b7280;
}

.qrcode-box {
  margin-top: 18rpx;
  display: flex;
  justify-content: center;
}

.qrcode-canvas {
  width: 220px;
  height: 220px;
  background: #fff;
}

.status-box {
  margin-top: 18rpx;
  display: flex;
  justify-content: center;
  min-height: 220px;
  align-items: center;
}

.status-image {
  width: 220px;
  height: 220px;
}

.status-text {
  font-size: 28rpx;
  color: #6b7280;
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #111827;
  margin-bottom: 12rpx;
}

.user-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 14rpx 0;
  border-bottom: 1px solid #f3f4f6;
}

.user-row:last-child {
  border-bottom: none;
}

.user-name {
  font-size: 28rpx;
  color: #111827;
  font-weight: 600;
}

.user-mobile {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.user-action {
  text-align: right;
}

.clock {
  font-size: 22rpx;
  color: #9ca3af;
}

.clock.done {
  color: #047857;
}

.phone {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #a00000;
}

.loading {
  margin-top: 16rpx;
  text-align: center;
  color: #6b7280;
  font-size: 24rpx;
}

.error {
  margin-top: 12rpx;
  color: #b91c1c;
  font-size: 22rpx;
  word-break: break-all;
}
