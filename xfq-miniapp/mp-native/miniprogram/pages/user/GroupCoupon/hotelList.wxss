.hotel-list-page {
  min-height: 100vh;
  padding: 20rpx 24rpx 24rpx;
}

.notice {
  margin-top: 16rpx;
  padding: 16rpx;
  border: 1px dashed #f59e0b;
  background: #fffbeb;
  border-radius: 12rpx;
  color: #92400e;
  font-size: 26rpx;
}

.list {
  margin-top: 10rpx;
}

.item {
  margin-top: 16rpx;
  padding: 20rpx;
}

.head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 10rpx;
}

.title {
  flex: 1;
  font-size: 31rpx;
  font-weight: 700;
  color: #111827;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.arrow {
  font-size: 36rpx;
  color: #9ca3af;
  line-height: 1;
}

.desc {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.bottom-space {
  height: 140rpx;
}

.bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 20rpx 24rpx 30rpx;
  background: linear-gradient(180deg, rgba(247, 247, 247, 0) 0%, #f7f7f7 44%);
}

.create-btn {
  width: 100%;
  margin: 0;
  background: #a00000;
  color: #fff;
  border-radius: 14rpx;
  font-size: 28rpx;
}

.create-btn::after {
  border: none;
}

.mask {
  position: fixed;
  inset: 0;
  z-index: 30;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
}

.mask-panel {
  width: 100%;
  padding: 24rpx;
}

.mask-title {
  text-align: center;
  font-size: 32rpx;
  color: #a00000;
  font-weight: 700;
  margin-bottom: 24rpx;
}

.field {
  margin-bottom: 20rpx;
}

.label {
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 10rpx;
}

.input {
  min-height: 74rpx;
  border: 1px solid #e5e7eb;
  border-radius: 10rpx;
  padding: 0 18rpx;
  font-size: 28rpx;
  background: #fff;
}

.textarea {
  width: 100%;
  min-height: 160rpx;
  border: 1px solid #e5e7eb;
  border-radius: 10rpx;
  padding: 14rpx 18rpx;
  font-size: 26rpx;
  background: #fff;
  box-sizing: border-box;
}

.mask-actions {
  margin-top: 8rpx;
  display: flex;
  gap: 12rpx;
}

.btn {
  flex: 1;
  text-align: center;
  padding: 16rpx 12rpx;
  border-radius: 10rpx;
  font-size: 26rpx;
}

.btn.cancel {
  background: #f3f4f6;
  color: #374151;
}

.btn.submit {
  background: #a00000;
  color: #fff;
}

.loading {
  margin-top: 16rpx;
  text-align: center;
  color: #6b7280;
  font-size: 24rpx;
}

.error {
  margin-top: 12rpx;
  color: #b91c1c;
  font-size: 22rpx;
  word-break: break-all;
}
