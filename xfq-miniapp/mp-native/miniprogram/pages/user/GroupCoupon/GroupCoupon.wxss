.group-page {
  min-height: 100vh;
  padding: 20rpx 24rpx 24rpx;
}

.notice {
  margin-top: 16rpx;
  padding: 16rpx;
  border: 1px dashed #f59e0b;
  background: #fffbeb;
  border-radius: 12rpx;
  color: #92400e;
  font-size: 26rpx;
}

.list {
  margin-top: 10rpx;
}

.item {
  margin-top: 16rpx;
  padding: 20rpx;
}

.item-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 12rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 700;
  color: #111827;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.status {
  font-size: 22rpx;
  color: #047857;
  background: #d1fae5;
  border-radius: 999rpx;
  padding: 6rpx 14rpx;
}

.status.disabled {
  color: #6b7280;
  background: #e5e7eb;
}

.desc {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.actions {
  margin-top: 18rpx;
  border-top: 1px solid #f3f4f6;
  padding-top: 16rpx;
  display: flex;
  gap: 10rpx;
}

.btn {
  flex: 1;
  text-align: center;
  padding: 10rpx 8rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 600;
  border: 1px solid;
}

.btn.green {
  color: #2f855a;
  border-color: #2f855a;
}

.btn.orange {
  color: #dd6b20;
  border-color: #dd6b20;
}

.btn.red {
  color: #a00000;
  border-color: #a00000;
}

.loading {
  margin-top: 18rpx;
  text-align: center;
  color: #6b7280;
  font-size: 24rpx;
}

.error {
  margin-top: 12rpx;
  color: #b91c1c;
  font-size: 22rpx;
  word-break: break-all;
}
