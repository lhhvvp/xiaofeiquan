.tourist-page {
  min-height: 100vh;
  padding: 20rpx 24rpx 24rpx;
}

.card {
  margin-top: 16rpx;
  padding: 10rpx 20rpx;
}

.row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 12rpx;
  padding: 20rpx 0;
  border-bottom: 1px solid #f3f4f6;
}

.row:last-child {
  border-bottom: none;
}

.name {
  font-size: 30rpx;
  color: #111827;
  font-weight: 600;
}

.mobile {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.right {
  color: #a00000;
  font-size: 24rpx;
  border: 1px solid #a00000;
  border-radius: 10rpx;
  padding: 8rpx 14rpx;
}
