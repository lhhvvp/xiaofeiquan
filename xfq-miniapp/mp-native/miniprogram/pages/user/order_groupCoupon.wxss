.order-group-page {
  min-height: 100vh;
  padding: 20rpx 24rpx 24rpx;
}

.notice {
  margin-top: 16rpx;
  padding: 16rpx;
  border: 1px dashed #f59e0b;
  background: #fffbeb;
  border-radius: 12rpx;
  color: #92400e;
  font-size: 26rpx;
}

.list {
  margin-top: 10rpx;
}

.item {
  margin-top: 16rpx;
  padding: 20rpx;
}

.title {
  font-size: 30rpx;
  font-weight: 700;
  color: #111827;
}

.sub {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.foot {
  margin-top: 12rpx;
  padding-top: 10rpx;
  border-top: 1px dashed #e5e7eb;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price {
  font-size: 30rpx;
  color: #932027;
  font-weight: 700;
}

.link {
  font-size: 24rpx;
  color: #a00000;
}

.error {
  margin-top: 12rpx;
  color: #b91c1c;
  font-size: 22rpx;
  word-break: break-all;
}
