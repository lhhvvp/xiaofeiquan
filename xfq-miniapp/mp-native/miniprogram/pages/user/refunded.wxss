.container {
  padding: 16rpx 24rpx 32rpx;
}

.notice {
  margin-top: 16rpx;
  padding: 16rpx;
  border: 1px dashed #f59e0b;
  background: #fffbeb;
  border-radius: 12rpx;
  color: #92400e;
  font-size: 26rpx;
}

.card {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 800;
  margin-bottom: 16rpx;
}

.sub {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
  word-break: break-all;
}

.textarea {
  width: 100%;
  height: 180rpx;
  padding: 20rpx;
  border-radius: 16rpx;
  background: #f7f7f7;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

