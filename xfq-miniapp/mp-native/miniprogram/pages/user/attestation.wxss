.attestation-page {
  min-height: 100vh;
  padding: 24rpx;
  background: #a00000;
}

.notice {
  margin-top: 16rpx;
  padding: 16rpx;
  border: 1px dashed #f59e0b;
  background: #fffbeb;
  border-radius: 12rpx;
  color: #92400e;
  font-size: 26rpx;
}

.card {
  margin-top: 16rpx;
  padding: 22rpx 20rpx;
}

.field {
  min-height: 86rpx;
  border-bottom: 1px solid #f3f4f6;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.field:last-of-type {
  border-bottom: none;
}

.label {
  width: 120rpx;
  font-size: 26rpx;
  color: #6b7280;
}

.input {
  flex: 1;
  min-height: 78rpx;
  font-size: 28rpx;
  color: #111827;
}

.phone-input {
  min-width: 0;
}

.phone-action {
  width: 240rpx;
  display: flex;
  justify-content: flex-end;
}

.mini-btn {
  margin: 0;
  min-height: 0;
  line-height: 1.4;
  font-size: 22rpx;
  padding: 10rpx 12rpx;
  color: #fff;
  background: #a00000;
  border-radius: 10rpx;
}

.mini-btn::after {
  border: none;
}

.send-btn {
  text-align: center;
}

.submit {
  margin-top: 26rpx;
  text-align: center;
  padding: 18rpx 12rpx;
  border-radius: 12rpx;
  background: #a00000;
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
}

.success-card {
  min-height: 460rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.success-icon {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  background: #00cf00;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 70rpx;
}

.success-title {
  margin-top: 32rpx;
  font-size: 36rpx;
  font-weight: 700;
  color: #111827;
}

.success-sub {
  margin-top: 58rpx;
  padding: 16rpx 56rpx;
  border-radius: 12rpx;
  background: #a00000;
  color: #fff;
  font-size: 28rpx;
}

.error {
  margin-top: 12rpx;
  color: #fee2e2;
  font-size: 22rpx;
  word-break: break-all;
}
