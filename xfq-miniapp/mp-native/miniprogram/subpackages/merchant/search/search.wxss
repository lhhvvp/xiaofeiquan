.search-page {
  min-height: 100vh;
  padding: 0 24rpx 24rpx;
}

.notice {
  margin-top: 16rpx;
  padding: 16rpx;
  border: 1px dashed #f59e0b;
  background: #fffbeb;
  border-radius: 12rpx;
  color: #92400e;
  font-size: 26rpx;
}

.search-wrap {
  position: sticky;
  top: 0;
  z-index: 9;
  margin-top: 16rpx;
  padding: 16rpx;
  display: flex;
  gap: 12rpx;
  align-items: center;
}

.search-main {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 10rpx;
  background: #f5f5f5;
  border-radius: 999rpx;
  padding: 4rpx 20rpx;
}

.search-icon {
  color: #a00000;
  font-size: 24rpx;
}

.search-input {
  flex: 1;
  min-height: 64rpx;
  font-size: 28rpx;
}

.search-btn {
  margin: 0;
  min-width: 116rpx;
  background: #a00000;
  color: #fff;
}

.search-btn::after {
  border: none;
}

.history-card {
  margin-top: 18rpx;
  padding: 20rpx;
}

.history-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.history-title {
  font-size: 30rpx;
  font-weight: 600;
}

.history-del {
  font-size: 24rpx;
  color: #a00000;
}

.history-list {
  margin-top: 16rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 14rpx;
}

.history-item {
  background: #fff7f7;
  padding: 10rpx 22rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  color: #7f1d1d;
}

.result-list {
  margin-top: 18rpx;
}

.empty {
  padding: 48rpx 0;
  text-align: center;
  color: #999;
}

.item {
  padding: 20rpx;
  display: flex;
  gap: 20rpx;
  margin-bottom: 18rpx;
}

.item-img {
  width: 210rpx;
  height: 170rpx;
  border-radius: 16rpx;
  background: #f5f5f5;
}

.item-main {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  min-width: 0;
}

.item-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 10rpx;
}

.item-name {
  font-size: 31rpx;
  font-weight: 600;
  max-width: 72%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-distance {
  font-size: 23rpx;
  color: #6b7280;
  min-width: 110rpx;
  text-align: right;
}

.item-sub {
  font-size: 24rpx;
  color: #6b7280;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 7rpx;
}

.error {
  margin-top: 16rpx;
  color: #b91c1c;
  font-size: 24rpx;
  word-break: break-all;
}
