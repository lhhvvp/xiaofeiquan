.container {
  padding: 0 24rpx 24rpx;
}

.notice {
  margin-top: 16rpx;
  padding: 16rpx;
  border: 1px dashed #f59e0b;
  background: #fffbeb;
  border-radius: 12rpx;
  color: #92400e;
  font-size: 26rpx;
}

.search {
  position: sticky;
  top: 0;
  padding: 16rpx 0;
  background: #fff;
  display: flex;
  gap: 16rpx;
  align-items: center;
}

.search-input {
  flex: 1;
  background: #f5f5f5;
  border-radius: 16rpx;
  padding: 16rpx 20rpx;
  font-size: 28rpx;
}

.search-btn {
  background: #a00000;
  color: #fff;
}

.history-head {
  margin-top: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.history-title {
  font-size: 28rpx;
  font-weight: 600;
}

.history-del {
  font-size: 26rpx;
  color: #a00000;
}

.history-list {
  margin-top: 12rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.history-item {
  background: #fff;
  padding: 10rpx 18rpx;
  border-radius: 999rpx;
  font-size: 26rpx;
  color: #333;
  border: 1px solid #efefef;
}

.empty {
  padding: 48rpx 0;
  text-align: center;
  color: #999;
}

.item {
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.item-img {
  width: 200rpx;
  height: 165rpx;
  border-radius: 16rpx;
  background: #f5f5f5;
}

.item-main {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.item-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 10rpx;
}

.item-name {
  font-size: 30rpx;
  font-weight: 600;
  max-width: 70%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-distance {
  font-size: 22rpx;
  color: #999;
  min-width: 120rpx;
  text-align: right;
}

.item-sub {
  font-size: 24rpx;
  color: #747474;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 6rpx;
}

.error {
  margin-top: 16rpx;
  color: #b91c1c;
  font-size: 26rpx;
}

