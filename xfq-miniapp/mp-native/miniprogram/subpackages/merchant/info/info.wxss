.merchant-info-page {
  min-height: 100vh;
  padding: 0 24rpx 24rpx;
}

.notice {
  margin-top: 16rpx;
  padding: 16rpx;
  border: 1px dashed #f59e0b;
  background: #fffbeb;
  border-radius: 12rpx;
  color: #92400e;
  font-size: 26rpx;
}

.hero {
  margin-top: 16rpx;
  position: relative;
}

.banner {
  width: 100%;
  height: 360rpx;
  border-radius: 20rpx;
  background: #f5f5f5;
}

.distance-tag {
  position: absolute;
  right: 16rpx;
  bottom: 16rpx;
  padding: 8rpx 14rpx;
  border-radius: 999rpx;
  background: rgba(160, 0, 0, 0.88);
  color: #fff3d6;
  font-size: 22rpx;
}

.card {
  margin-top: 16rpx;
  padding: 20rpx;
}

.name {
  font-size: 33rpx;
  font-weight: 600;
}

.meta {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.business-time {
  margin-top: 16rpx;
  display: flex;
  align-items: center;
}

.business-label {
  display: inline-block;
  padding: 8rpx 16rpx;
  background: #a00000;
  border-radius: 12rpx 0 0 12rpx;
  color: #fff;
  font-size: 23rpx;
}

.business-value {
  padding: 8rpx 16rpx;
  background: #f5f5f5;
  border-radius: 0 12rpx 12rpx 0;
  font-size: 23rpx;
  color: #374151;
}

.row {
  margin-top: 14rpx;
  font-size: 26rpx;
  color: #374151;
  word-break: break-all;
  display: flex;
  align-items: flex-start;
  gap: 14rpx;
}

.row-label {
  width: 70rpx;
  color: #6b7280;
  flex-shrink: 0;
}

.row-value {
  flex: 1;
  color: #1f2937;
}

.actions {
  margin-top: 20rpx;
  display: flex;
  gap: 14rpx;
}

.action-btn {
  margin: 0;
  flex: 1;
  border-radius: 14rpx;
  font-size: 24rpx;
  color: #7f1d1d;
  background: #fff3f3;
}

.action-btn::after {
  border: none;
}

.action-btn.primary {
  color: #fff;
  background: #a00000;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.error {
  margin-top: 16rpx;
  color: #b91c1c;
  font-size: 24rpx;
}
