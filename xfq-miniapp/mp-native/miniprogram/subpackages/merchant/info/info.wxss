.container {
  padding: 0 24rpx 24rpx;
}

.notice {
  margin-top: 16rpx;
  padding: 16rpx;
  border: 1px dashed #f59e0b;
  background: #fffbeb;
  border-radius: 12rpx;
  color: #92400e;
  font-size: 26rpx;
}

.banner {
  margin-top: 16rpx;
  width: 100%;
  height: 360rpx;
  border-radius: 20rpx;
  background: #f5f5f5;
}

.card {
  margin-top: 16rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
}

.name {
  font-size: 34rpx;
  font-weight: 600;
}

.meta {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #666;
}

.row {
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #333;
  word-break: break-all;
}

.actions {
  margin-top: 16rpx;
  display: flex;
  gap: 16rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.error {
  margin-top: 16rpx;
  color: #b91c1c;
  font-size: 26rpx;
}
