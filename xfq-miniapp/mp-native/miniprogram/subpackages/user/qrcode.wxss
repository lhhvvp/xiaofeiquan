.container {
  min-height: 100vh;
  background: linear-gradient(180deg, rgba(174, 0, 13, 1) 0%, rgba(247, 247, 247, 1) 30%, rgba(247, 247, 247, 1) 100%);
  padding-top: 130rpx;
}

.card {
  width: 92%;
  margin: 0 auto;
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 80rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  box-sizing: border-box;
}

.title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  color: #333333;
  text-align: center;
  word-break: break-all;
}

.used {
  width: 220rpx;
  height: 220rpx;
  border: 4rpx solid #a00000;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #a00000;
  font-size: 34rpx;
  font-weight: 600;
  margin: 10rpx 0 30rpx;
}

.qrcode-canvas {
  width: 520rpx;
  height: 520rpx;
  margin: 10rpx 0 30rpx;
}

