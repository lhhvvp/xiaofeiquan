.coupon-order-page {
  min-height: 100vh;
  padding: 0 24rpx 24rpx;
}

.notice {
  margin-top: 16rpx;
  padding: 20rpx;
  border-radius: 12rpx;
  background: #fffbeb;
  border: 1px dashed #f59e0b;
  color: #92400e;
  font-size: 26rpx;
}

.notice-main {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.tabs-wrap {
  position: sticky;
  top: 0;
  z-index: 9;
  margin-top: 16rpx;
  padding: 12rpx 14rpx;
}

.tabs {
  white-space: nowrap;
  padding-bottom: 4rpx;
}

.tab {
  display: inline-block;
  padding: 10rpx 20rpx;
  background: #f5f5f5;
  color: #666;
  border-radius: 999rpx;
  font-size: 24rpx;
  margin-right: 12rpx;
}

.tab.active {
  background: #a00000;
  color: #fff;
}

.list-wrap {
  margin-top: 18rpx;
}

.item {
  margin-bottom: 16rpx;
  padding: 20rpx;
}

.item-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
}

.item-title {
  font-size: 31rpx;
  font-weight: 600;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.tag {
  padding: 6rpx 14rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  border: 1px solid #efefef;
  color: #666;
}

.tag.ok {
  background: #fff4ea;
  border-color: #f0e0d2;
  color: #a00000;
}

.tag.used {
  background: #eef2ff;
  border-color: #e0e7ff;
  color: #3730a3;
}

.tag.expired {
  background: #f3f4f6;
  border-color: #e5e7eb;
  color: #6b7280;
}

.item-sub {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #666;
}

.item-foot {
  margin-top: 14rpx;
  padding-top: 12rpx;
  border-top: 1px dashed #edeef0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.item-price {
  font-size: 30rpx;
  color: #932027;
  font-weight: 600;
}

.item-link {
  font-size: 24rpx;
  color: #932027;
}

.error {
  margin-top: 16rpx;
  color: #b91c1c;
  word-break: break-all;
}
