.container {
  padding: 0 24rpx 24rpx;
}

.notice {
  margin-top: 16rpx;
  padding: 20rpx;
  border-radius: 20rpx;
  background: #fffbeb;
  border: 1px dashed #f59e0b;
  color: #92400e;
  font-size: 26rpx;
}

.tabs {
  margin-top: 16rpx;
  white-space: nowrap;
  padding-bottom: 8rpx;
}

.tab {
  display: inline-block;
  padding: 12rpx 20rpx;
  background: #f5f5f5;
  color: #666;
  border-radius: 999rpx;
  font-size: 26rpx;
  margin-right: 16rpx;
}

.tab.active {
  background: #a00000;
  color: #fff;
}

.empty {
  padding: 48rpx 0;
  text-align: center;
  color: #999;
}

.item {
  margin-top: 16rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
}

.item-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
}

.item-title {
  font-size: 30rpx;
  font-weight: 600;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.tag {
  padding: 6rpx 14rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  border: 1px solid #efefef;
  color: #666;
}

.tag.ok {
  background: #fff4ea;
  border-color: #f0e0d2;
  color: #a00000;
}

.tag.used {
  background: #eef2ff;
  border-color: #e0e7ff;
  color: #3730a3;
}

.tag.expired {
  background: #f3f4f6;
  border-color: #e5e7eb;
  color: #6b7280;
}

.item-sub {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #666;
}

.footer {
  padding: 24rpx 0;
  text-align: center;
  color: #999;
  font-size: 26rpx;
}

.error {
  margin-top: 16rpx;
  color: #b91c1c;
  word-break: break-all;
}

