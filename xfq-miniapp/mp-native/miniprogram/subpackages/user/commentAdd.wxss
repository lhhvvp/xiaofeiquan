.container {
  padding: 24rpx;
}

.notice {
  margin-top: 16rpx;
  padding: 16rpx;
  border: 1px dashed #f59e0b;
  background: #fffbeb;
  border-radius: 12rpx;
  color: #92400e;
  font-size: 26rpx;
}

.notice-actions {
  margin-top: 12rpx;
}

.card {
  margin-top: 16rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
}

.row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.label {
  font-size: 30rpx;
  font-weight: 700;
  color: #111827;
}

.value {
  font-size: 28rpx;
  color: #a00000;
}

.label2 {
  margin-top: 10rpx;
  font-size: 30rpx;
  font-weight: 700;
  color: #111827;
}

.textarea {
  width: 100%;
  min-height: 240rpx;
  border-radius: 16rpx;
  padding: 16rpx;
  background: #f7f7f7;
  font-size: 28rpx;
  box-sizing: border-box;
  margin-top: 14rpx;
}

.submit {
  margin-top: 28rpx;
}

