.container {
  min-height: 100vh;
  padding: 20rpx 0 40rpx;
  background: rgba(0, 0, 0, 0.06);
}

.notice {
  width: 92%;
  margin: 0 auto 20rpx;
  padding: 18rpx 20rpx;
  background: #fff3cd;
  color: #856404;
  border-radius: 12rpx;
  font-size: 26rpx;
}

.notice-actions {
  margin-top: 10rpx;
}

.card {
  width: 92%;
  margin: 0 auto;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
  box-sizing: border-box;
}

.card-title {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 18rpx;
  color: #222;
}

.input-row {
  padding: 12rpx 0;
  border-bottom: 1rpx solid #f2f2f2;
}

.input-row:last-child {
  border-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.input {
  height: 72rpx;
  border: 1rpx solid #eee;
  border-radius: 12rpx;
  padding: 0 14rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.textarea {
  width: 100%;
  height: 180rpx;
  border: 1rpx solid #eee;
  border-radius: 12rpx;
  padding: 12rpx 14rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.image-box {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  align-items: center;
}

.img-wrap {
  width: 140rpx;
  height: 140rpx;
  position: relative;
}

.img {
  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx;
  background: #f2f2f2;
}

.del {
  position: absolute;
  right: -10rpx;
  top: -10rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add {
  height: 60rpx;
  line-height: 60rpx;
}

