.container {
  min-height: 100vh;
  padding: 20rpx 0 40rpx;
  background: linear-gradient(180deg, rgba(174, 0, 13, 1) 0%, rgba(247, 247, 247, 1) 30%, rgba(247, 247, 247, 1) 100%);
}

.notice {
  width: 92%;
  margin: 0 auto 20rpx;
  padding: 18rpx 20rpx;
  background: #fff3cd;
  color: #856404;
  border-radius: 12rpx;
  font-size: 26rpx;
}

.notice-actions {
  margin-top: 10rpx;
}

.item {
  width: 92%;
  margin: 0 auto 20rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-bottom: 14rpx;
  border-bottom: 1rpx solid #f2f2f2;
}

.tit {
  display: flex;
  align-items: center;
  gap: 12rpx;
  width: calc(100% - 160rpx);
}

.tag {
  font-size: 24rpx;
  color: #a00000;
  border: 1rpx solid rgba(160, 0, 0, 0.3);
  padding: 4rpx 10rpx;
  border-radius: 10rpx;
  flex-shrink: 0;
}

.name {
  font-size: 30rpx;
  font-weight: 700;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.sub {
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #666;
}

.images {
  margin-top: 14rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.img {
  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx;
  background: #f2f2f2;
}

