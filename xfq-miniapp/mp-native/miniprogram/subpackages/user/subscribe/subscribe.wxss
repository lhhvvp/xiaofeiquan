.container {
  min-height: 100vh;
  padding: 20rpx 0 140rpx;
  background: linear-gradient(180deg, rgba(174, 0, 13, 1) 0%, rgba(247, 247, 247, 1) 30%, rgba(247, 247, 247, 1) 100%);
}

.notice {
  width: 92%;
  margin: 0 auto 20rpx;
  padding: 18rpx 20rpx;
  background: #fff3cd;
  color: #856404;
  border-radius: 12rpx;
  font-size: 26rpx;
}

.card {
  width: 92%;
  margin: 0 auto 20rpx;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
  box-sizing: border-box;
}

.card-title {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 18rpx;
  color: #222;
}

.row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12rpx 0;
}

.label {
  width: 160rpx;
  color: #666;
  font-size: 28rpx;
}

.picker {
  color: #333;
  padding: 12rpx 14rpx;
  border: 1rpx solid #eee;
  border-radius: 12rpx;
  min-width: 260rpx;
  text-align: right;
}

.slots {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 10rpx;
}

.slot {
  width: calc(33.333% - 12rpx);
  border: 1rpx solid #eee;
  border-radius: 14rpx;
  padding: 16rpx 12rpx;
  box-sizing: border-box;
}

.slot--active {
  border-color: #a00000;
  background: rgba(160, 0, 0, 0.06);
}

.slot-time {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.slot-stock {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: #888;
}

.row-qty {
  margin-top: 10rpx;
}

.qty {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.qty-input {
  width: 120rpx;
  height: 56rpx;
  border: 1rpx solid #eee;
  border-radius: 12rpx;
  padding: 0 12rpx;
  text-align: center;
  box-sizing: border-box;
}

.qty-hint {
  font-size: 24rpx;
  color: #888;
}

.tourist-list {
  margin-bottom: 12rpx;
}

.tourist-item {
  padding: 14rpx 0;
  border-bottom: 1rpx solid #f3f3f3;
}

.tourist-item:last-child {
  border-bottom: 0;
}

.tourist-name {
  font-weight: 700;
  color: #333;
  font-size: 30rpx;
}

.tourist-sub {
  margin-top: 4rpx;
  color: #888;
  font-size: 24rpx;
}

.empty {
  color: #999;
  font-size: 26rpx;
  padding: 10rpx 0;
}

.hint {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #888;
}

.input-row {
  display: flex;
  align-items: center;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #f3f3f3;
}

.input-row:last-child {
  border-bottom: 0;
}

.input {
  flex: 1;
  text-align: right;
  font-size: 28rpx;
}

.footer {
  width: 92%;
  margin: 0 auto;
  position: fixed;
  left: 4%;
  bottom: 20rpx;
}

.modal-mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 24rpx;
}

.modal {
  width: 100%;
  max-width: 680rpx;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}

.modal-header {
  padding: 18rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #f3f3f3;
}

.modal-title {
  font-weight: 700;
  color: #333;
  font-size: 30rpx;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
}

.modal-body {
  max-height: 70vh;
  overflow: auto;
  padding: 10rpx 20rpx;
}

.tourist-option {
  display: flex;
  gap: 12rpx;
  padding: 14rpx 0;
  border-bottom: 1rpx solid #f7f7f7;
}

.opt-main {
  flex: 1;
}

.opt-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}

.opt-sub {
  font-size: 24rpx;
  color: #888;
  margin-top: 4rpx;
}

.modal-actions {
  display: flex;
  gap: 20rpx;
  padding: 18rpx 20rpx 24rpx;
}

.modal-actions button {
  flex: 1;
}

