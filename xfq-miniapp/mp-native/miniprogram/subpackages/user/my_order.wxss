.container {
  padding: 0 24rpx 32rpx;
}

.notice {
  margin-top: 16rpx;
  padding: 16rpx;
  border: 1px dashed #f59e0b;
  background: #fffbeb;
  border-radius: 12rpx;
  color: #92400e;
  font-size: 26rpx;
}

.tabs {
  white-space: nowrap;
  padding: 16rpx 0;
}

.tab {
  display: inline-block;
  padding: 12rpx 20rpx;
  background: #f5f5f5;
  color: #666;
  border-radius: 999rpx;
  font-size: 26rpx;
  margin-right: 16rpx;
}

.tab.active {
  background: #a00000;
  color: #fff;
}

.item {
  margin-top: 16rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
}

.top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 1px solid #f0f0f0;
}

.name {
  font-size: 30rpx;
  font-weight: 700;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.status {
  font-size: 24rpx;
  color: #666;
  flex-shrink: 0;
}

.bottom {
  margin-top: 16rpx;
  display: flex;
  gap: 20rpx;
}

.img {
  width: 200rpx;
  height: 165rpx;
  border-radius: 16rpx;
  background: #f5f5f5;
}

.main {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.sub {
  font-size: 24rpx;
  color: #747474;
  margin-bottom: 6rpx;
}

