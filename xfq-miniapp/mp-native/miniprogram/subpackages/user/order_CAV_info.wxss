.container {
  padding: 0 24rpx 32rpx;
}

.notice {
  margin-top: 16rpx;
  padding: 16rpx;
  border: 1px dashed #f59e0b;
  background: #fffbeb;
  border-radius: 12rpx;
  color: #92400e;
  font-size: 26rpx;
}

.card {
  margin-top: 16rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
}

.title {
  font-size: 34rpx;
  font-weight: 700;
  text-align: center;
  word-break: break-all;
}

.price {
  margin-top: 10rpx;
  text-align: center;
  font-size: 54rpx;
  font-weight: 800;
  color: #932027;
}

.row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
}

.label {
  font-size: 26rpx;
  color: #999;
  flex-shrink: 0;
}

.value {
  flex: 1;
  text-align: right;
  word-break: break-all;
}

.app-name {
  font-size: 28rpx;
  font-weight: 700;
  color: #333;
}

.app-sub {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: #999;
}

.section-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #111827;
  margin-bottom: 10rpx;
}

.section-text {
  font-size: 26rpx;
  color: #374151;
  word-break: break-all;
}

.sub {
  font-size: 26rpx;
  color: #6b7280;
  text-align: center;
}

