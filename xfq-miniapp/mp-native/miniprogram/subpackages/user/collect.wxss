.container {
  padding: 24rpx;
}

.notice {
  margin-top: 16rpx;
  padding: 16rpx;
  border: 1px dashed #f59e0b;
  background: #fffbeb;
  border-radius: 12rpx;
  color: #92400e;
  font-size: 26rpx;
}

.notice-actions {
  margin-top: 12rpx;
}

.item {
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.item-img {
  width: 200rpx;
  height: 165rpx;
  border-radius: 16rpx;
  background: #f5f5f5;
}

.item-main {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.item-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 10rpx;
}

.item-name {
  font-size: 30rpx;
  font-weight: 600;
  max-width: 70%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-distance {
  font-size: 22rpx;
  color: #999;
  min-width: 120rpx;
  text-align: right;
}

.item-sub {
  font-size: 24rpx;
  color: #747474;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 6rpx;
}

