.container {
  padding: 0 24rpx 32rpx;
}

.notice {
  margin-top: 16rpx;
  padding: 16rpx;
  border: 1px dashed #f59e0b;
  background: #fffbeb;
  border-radius: 12rpx;
  color: #92400e;
  font-size: 26rpx;
}

.item {
  margin-top: 16rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
}

.top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 1px solid #f0f0f0;
}

.title {
  font-size: 28rpx;
  font-weight: 700;
  color: #333;
  flex: 1;
  min-width: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.price {
  font-size: 28rpx;
  font-weight: 800;
  color: #a00000;
  flex-shrink: 0;
}

.sub {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

