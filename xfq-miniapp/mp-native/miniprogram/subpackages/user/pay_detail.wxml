<view class="container">
  <view wx:if="{{!hasBaseUrl}}" class="notice">
    baseUrl 未配置：请创建 miniprogram/config/local.js 并设置 { baseUrl }
  </view>

  <view wx:if="{{!hasLogin}}" class="notice">
    <view>查看订单详情需要先登录</view>
    <ui-button type="primary" size="mini" text="去登录" bind:tap="ensureLoginOrPrompt" />
  </view>

  <view wx:if="{{detail}}" class="card">
    <view class="head">
      <image class="img" src="{{detail.icon}}" mode="aspectFill" />
      <view class="main">
        <view class="title">{{detail.title}}</view>
        <view class="sub">金额：￥{{detail.price}}</view>
        <view class="sub">状态：{{detail.statusText}}</view>
      </view>
    </view>

    <view class="row">
      <view class="label">订单号</view>
      <view class="value">{{detail.orderNo}}</view>
    </view>
    <view class="row">
      <view class="label">创建时间</view>
      <view class="value">{{detail.createTimeText}}</view>
    </view>
    <view class="row">
      <view class="label">支付时间</view>
      <view class="value">{{detail.payTimeText}}</view>
    </view>
  </view>

  <ui-error wx:if="{{error}}" message="{{error}}" bind:retry="onRetry" />
</view>

