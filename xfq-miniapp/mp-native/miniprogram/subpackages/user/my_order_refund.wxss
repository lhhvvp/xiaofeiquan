.container {
  padding: 0 24rpx 32rpx;
}

.notice {
  margin-top: 16rpx;
  padding: 16rpx;
  border: 1px dashed #f59e0b;
  background: #fffbeb;
  border-radius: 12rpx;
  color: #92400e;
  font-size: 26rpx;
}

.item {
  margin-top: 16rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
}

.top {
  display: flex;
  justify-content: space-between;
  gap: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 1px solid #f0f0f0;
}

.trade {
  font-size: 26rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.status {
  font-size: 24rpx;
  color: #666;
  flex-shrink: 0;
}

.mid {
  margin-top: 16rpx;
}

.seller {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.icon {
  width: 50rpx;
  height: 50rpx;
  border-radius: 10rpx;
  background: #f5f5f5;
}

.seller-name {
  font-size: 30rpx;
  font-weight: 700;
  color: #333;
}

.bottom {
  margin-top: 16rpx;
}

.amount {
  text-align: center;
  font-size: 28rpx;
  margin: 24rpx 0;
}

.amount-val {
  font-size: 42rpx;
  font-weight: 800;
  color: #a00000;
}

.sub {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

