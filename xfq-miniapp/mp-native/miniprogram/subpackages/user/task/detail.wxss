.container {
  padding: 24rpx;
}

.notice {
  margin-top: 16rpx;
  padding: 16rpx;
  border: 1px dashed #f59e0b;
  background: #fffbeb;
  border-radius: 12rpx;
  color: #92400e;
  font-size: 26rpx;
}

.notice-actions {
  margin-top: 12rpx;
}

.card {
  margin-top: 16rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 800;
  color: #111827;
  margin-bottom: 12rpx;
}

.prompt {
  font-size: 26rpx;
  color: #6b7280;
}

.list-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #111827;
  margin-bottom: 12rpx;
}

.item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-top: 1px solid #f3f4f6;
}

.avatar {
  width: 84rpx;
  height: 84rpx;
  border-radius: 16rpx;
  background: #f3f4f6;
  flex: 0 0 auto;
}

.item-main {
  flex: 1;
  padding: 0 16rpx;
  min-width: 0;
}

.name {
  font-size: 28rpx;
  font-weight: 700;
  color: #111827;
  word-break: break-all;
}

.time {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: #6b7280;
  word-break: break-all;
}

.status {
  flex: 0 0 auto;
  font-size: 24rpx;
  color: #16a34a;
  font-weight: 700;
}

.actions {
  margin-top: 20rpx;
}

