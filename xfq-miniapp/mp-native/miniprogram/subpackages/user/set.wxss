.container {
  padding: 24rpx 24rpx 160rpx;
}

.notice {
  margin-top: 16rpx;
  padding: 16rpx;
  border: 1px dashed #f59e0b;
  background: #fffbeb;
  border-radius: 12rpx;
  color: #92400e;
  font-size: 26rpx;
}

.notice-actions {
  margin-top: 12rpx;
}

.avatar {
  margin-top: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.avatarButton {
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
  background-color: #f3f4f6;
  background-size: cover;
  background-position: center;
  padding: 0;
  margin: 0;
}

.avatarButton::after {
  border: none;
}

.avatarText {
  margin-top: 16rpx;
  font-size: 26rpx;
  color: #6b7280;
}

.card {
  margin-top: 16rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
}

.row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
  padding: 14rpx 0;
  border-bottom: 1px solid #f3f4f6;
}

.row:last-child {
  border-bottom: none;
}

.label {
  width: 140rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #111827;
}

.input {
  flex: 1;
  border: 1px solid #e5e7eb;
  border-radius: 12rpx;
  padding: 12rpx 14rpx;
  font-size: 26rpx;
  text-align: right;
}

.disabled .label {
  color: #9ca3af;
}

.disabled .input {
  color: #9ca3af;
  background: #f9fafb;
}

.footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 18rpx 24rpx 28rpx;
  background: rgba(255, 255, 255, 0.98);
  border-top: 1px solid #f3f4f6;
}

