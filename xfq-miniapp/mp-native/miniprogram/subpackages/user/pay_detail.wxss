.container {
  padding: 0 24rpx 32rpx;
}

.notice {
  margin-top: 16rpx;
  padding: 16rpx;
  border: 1px dashed #f59e0b;
  background: #fffbeb;
  border-radius: 12rpx;
  color: #92400e;
  font-size: 26rpx;
}

.card {
  margin-top: 16rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
}

.head {
  display: flex;
  gap: 20rpx;
}

.img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  background: #f5f5f5;
}

.main {
  flex: 1;
  min-width: 0;
}

.title {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.sub {
  font-size: 24rpx;
  color: #666;
  margin-top: 6rpx;
}

.row {
  margin-top: 16rpx;
  display: flex;
  justify-content: space-between;
  gap: 16rpx;
}

.label {
  color: #999;
  font-size: 26rpx;
}

.value {
  color: #333;
  font-size: 26rpx;
  word-break: break-all;
  text-align: right;
}

