.container {
  padding: 0 24rpx 24rpx;
}

.notice {
  margin-top: 16rpx;
  padding: 16rpx;
  border: 1px dashed #f59e0b;
  background: #fffbeb;
  border-radius: 12rpx;
  color: #92400e;
  font-size: 26rpx;
}

.banner {
  margin-top: 16rpx;
  width: 100%;
  height: 360rpx;
  border-radius: 20rpx;
  background: #f5f5f5;
}

.card {
  margin-top: 16rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
}

.name {
  font-size: 34rpx;
  font-weight: 600;
}

.meta {
  margin-top: 8rpx;
  font-size: 26rpx;
  color: #666;
}

.row {
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #333;
  word-break: break-all;
}

.actions {
  margin-top: 16rpx;
  display: flex;
  gap: 16rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.group-title {
  margin-top: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
}

.ticket-item {
  padding: 20rpx 0;
  border-bottom: 1px solid #efefef;
  display: flex;
  justify-content: space-between;
  gap: 16rpx;
}

.ticket-left {
  flex: 1;
}

.ticket-name {
  font-size: 28rpx;
  font-weight: 600;
}

.ticket-hint {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #666;
}

.ticket-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: center;
  gap: 12rpx;
}

.ticket-price {
  font-size: 26rpx;
  color: #932027;
}

.ticket-btn {
  padding: 10rpx 18rpx;
  background: #932027;
  color: #fff;
  font-size: 24rpx;
  border-radius: 16rpx;
}

.scenic-item {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.scenic-img {
  width: 200rpx;
  height: 165rpx;
  border-radius: 16rpx;
  background: #f5f5f5;
}

.scenic-main {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.scenic-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.scenic-sub {
  font-size: 24rpx;
  color: #747474;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 6rpx;
}

.comment-item {
  display: flex;
  gap: 16rpx;
  padding: 16rpx 0;
  border-bottom: 1px solid #efefef;
}

.comment-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: #f5f5f5;
}

.comment-main {
  flex: 1;
}

.comment-title {
  font-size: 26rpx;
  font-weight: 600;
}

.comment-content {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #333;
  word-break: break-all;
}

.comment-date {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: #999;
}

.more {
  margin-top: 12rpx;
  text-align: center;
  font-size: 26rpx;
  color: #666;
}

.error {
  margin-top: 16rpx;
  color: #b91c1c;
  font-size: 26rpx;
}

.modal-mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: flex-end;
  padding: 24rpx;
  z-index: 999;
}

.modal {
  width: 100%;
  max-height: 70%;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}

.modal-header {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #efefef;
}

.modal-title {
  font-size: 30rpx;
  font-weight: 600;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.modal-close {
  width: 56rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  font-size: 44rpx;
  color: #666;
}

.modal-body {
  padding: 20rpx;
  overflow: auto;
  max-height: 60vh;
}

.modal-section {
  margin-bottom: 24rpx;
}

.modal-section-title {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.rights {
  font-size: 24rpx;
  color: #333;
  word-break: break-all;
}
}
