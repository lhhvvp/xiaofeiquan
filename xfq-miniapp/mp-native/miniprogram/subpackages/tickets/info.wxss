.ticket-info-page {
  min-height: 100vh;
  padding: 0 24rpx 24rpx;
}

.notice {
  margin-top: 16rpx;
  padding: 16rpx;
  border: 1px dashed #f59e0b;
  background: #fffbeb;
  border-radius: 12rpx;
  color: #92400e;
  font-size: 26rpx;
}

.hero {
  margin-top: 16rpx;
  position: relative;
}

.banner {
  width: 100%;
  height: 360rpx;
  border-radius: 20rpx;
  background: #f5f5f5;
}

.distance-tag {
  position: absolute;
  right: 16rpx;
  bottom: 16rpx;
  padding: 8rpx 14rpx;
  border-radius: 999rpx;
  background: rgba(160, 0, 0, 0.88);
  color: #fff3d6;
  font-size: 22rpx;
}

.card {
  margin-top: 16rpx;
  padding: 20rpx;
}

.info-card {
  display: flex;
  gap: 14rpx;
}

.info-main {
  flex: 1;
  min-width: 0;
}

.name {
  font-size: 33rpx;
  font-weight: 600;
}

.meta {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.business-time {
  margin-top: 16rpx;
  display: flex;
  align-items: center;
}

.business-label {
  display: inline-block;
  padding: 8rpx 16rpx;
  background: #a00000;
  border-radius: 12rpx 0 0 12rpx;
  color: #fff;
  font-size: 23rpx;
}

.business-value {
  padding: 8rpx 16rpx;
  background: #f5f5f5;
  border-radius: 0 12rpx 12rpx 0;
  font-size: 23rpx;
  color: #374151;
}

.row {
  margin-top: 14rpx;
  font-size: 25rpx;
  color: #374151;
  word-break: break-all;
}

.score-panel {
  width: 170rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-left: 1px solid #f3f4f6;
}

.score-value {
  font-size: 36rpx;
  color: #932027;
  font-weight: 600;
}

.score-count {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: #6b7280;
}

.action-card {
  padding-top: 14rpx;
  padding-bottom: 14rpx;
}

.actions {
  display: flex;
  gap: 12rpx;
}

.action-btn {
  margin: 0;
  flex: 1;
  border-radius: 14rpx;
  font-size: 24rpx;
  color: #7f1d1d;
  background: #fff3f3;
}

.action-btn::after {
  border: none;
}

.action-btn.primary {
  color: #fff;
  background: #a00000;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.group-title {
  margin-top: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
}

.ticket-item {
  padding: 20rpx 0;
  border-bottom: 1px solid #efefef;
  display: flex;
  justify-content: space-between;
  gap: 16rpx;
}

.ticket-left {
  flex: 1;
  min-width: 0;
}

.ticket-name {
  font-size: 28rpx;
  font-weight: 600;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.ticket-hint {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #666;
}

.ticket-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: center;
  gap: 12rpx;
}

.ticket-price {
  font-size: 26rpx;
  color: #932027;
}

.ticket-btn {
  padding: 10rpx 18rpx;
  background: #932027;
  color: #fff;
  font-size: 24rpx;
  border-radius: 16rpx;
}

.scenic-item {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.scenic-img {
  width: 200rpx;
  height: 165rpx;
  border-radius: 16rpx;
  background: #f5f5f5;
}

.scenic-main {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.scenic-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.scenic-sub {
  font-size: 24rpx;
  color: #747474;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 6rpx;
}

.comment-item {
  display: flex;
  gap: 16rpx;
  padding: 16rpx 0;
  border-bottom: 1px solid #efefef;
}

.comment-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: #f5f5f5;
}

.comment-main {
  flex: 1;
}

.comment-title {
  font-size: 26rpx;
  font-weight: 600;
}

.comment-content {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #333;
  word-break: break-all;
}

.comment-date {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: #999;
}

.more {
  margin-top: 12rpx;
  text-align: center;
  font-size: 26rpx;
  color: #666;
}

.error {
  margin-top: 16rpx;
  color: #b91c1c;
  font-size: 24rpx;
}

.modal-mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: flex-end;
  padding: 24rpx;
  z-index: 999;
}

.modal {
  width: 100%;
  max-height: 70%;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}

.modal-header {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #efefef;
}

.modal-title {
  font-size: 30rpx;
  font-weight: 600;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.modal-close {
  width: 56rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  font-size: 44rpx;
  color: #666;
}

.modal-body {
  padding: 20rpx;
  overflow: auto;
  max-height: 60vh;
}

.modal-section {
  margin-bottom: 24rpx;
}

.modal-section-title {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.rights {
  font-size: 24rpx;
  color: #333;
  word-break: break-all;
}
