.coupon-page {
  min-height: 100vh;
  padding: 24rpx 24rpx 120rpx;
  background: linear-gradient(180deg, #ae000d 0%, #f7f7f7 280rpx, #f7f7f7 100%);
}

.notice {
  margin-top: 16rpx;
  padding: 16rpx;
  border: 1px dashed #f59e0b;
  background: #fffbeb;
  border-radius: 12rpx;
  color: #92400e;
  font-size: 26rpx;
}

.coupon-card {
  position: relative;
  padding: 44rpx 24rpx 26rpx;
}

.badge {
  position: absolute;
  left: 0;
  top: 16rpx;
  min-width: 150rpx;
  text-align: center;
  background: #a00000;
  color: #fff;
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  border-radius: 0 999rpx 999rpx 0;
}

.title {
  font-size: 35rpx;
  text-align: center;
  font-weight: 700;
  color: #111827;
}

.price {
  margin-top: 10rpx;
  text-align: center;
  font-size: 44rpx;
  font-weight: 700;
  color: #a00000;
}

.tips {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #5f5f5f;
}

.progress {
  margin-top: 18rpx;
}

.progress-bar {
  height: 16rpx;
  background: #f3f4f6;
  border-radius: 999rpx;
  overflow: hidden;
}

.progress-inner {
  height: 16rpx;
  background: #a00000;
}

.progress-text {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #666;
}

.row {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1px solid #efefef;
  display: flex;
  justify-content: space-between;
  gap: 16rpx;
}

.row-left {
  width: 120rpx;
  font-size: 28rpx;
  font-weight: 600;
}

.row-right {
  flex: 1;
  text-align: right;
  font-size: 25rpx;
  color: #666;
}

.actions {
  margin-top: 20rpx;
  display: flex;
  gap: 12rpx;
}

.primary-btn,
.secondary-btn {
  margin: 0;
  flex: 1;
  border-radius: 14rpx;
  font-size: 25rpx;
}

.primary-btn::after,
.secondary-btn::after {
  border: none;
}

.secondary-btn {
  color: #7f1d1d;
  background: #fff3f3;
}

.card {
  margin-top: 16rpx;
  padding: 20rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.error {
  margin-top: 16rpx;
  color: #b91c1c;
  word-break: break-all;
}
