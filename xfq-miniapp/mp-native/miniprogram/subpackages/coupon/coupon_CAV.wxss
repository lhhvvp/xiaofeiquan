.coupon-cav-page {
  min-height: 100vh;
  padding: 120rpx 24rpx 24rpx;
  background: #f7f7f7;
}

.notice {
  margin-top: 16rpx;
  padding: 16rpx;
  border: 1px dashed #f59e0b;
  background: #fffbeb;
  border-radius: 12rpx;
  color: #92400e;
  font-size: 26rpx;
}

.card {
  margin-top: 16rpx;
  padding: 20rpx;
  position: relative;
}

.card::before,
.card::after {
  content: '';
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background: #f7f7f7;
  top: 52%;
}

.card::before {
  left: -15rpx;
}

.card::after {
  right: -15rpx;
}

.title-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-bottom: 14rpx;
  border-bottom: 1px dashed #d1d5db;
}

.title-label {
  font-size: 32rpx;
  font-weight: 700;
}

.title-arrow {
  font-size: 34rpx;
  color: #c0c0c0;
}

.coupon-main {
  padding: 46rpx 0 20rpx;
}

.title {
  font-size: 34rpx;
  font-weight: 600;
  text-align: center;
}

.price {
  margin-top: 10rpx;
  text-align: center;
  font-size: 76rpx;
  font-weight: 700;
  color: #932027;
}

.sub {
  margin-top: 12rpx;
  font-size: 26rpx;
  color: #6b7280;
  text-align: center;
  word-break: break-all;
}

.content-info {
  margin-top: 18rpx;
  border-top: 1px dashed #d1d5db;
}

.info-row {
  padding: 16rpx 0;
}

.info-row + .info-row {
  border-top: 1px solid #f1f5f9;
}

.info-label {
  font-size: 26rpx;
  color: #111827;
  font-weight: 600;
}

.info-value {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #6b7280;
  word-break: break-all;
}

.mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.55);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  z-index: 999;
}

.mask-card {
  width: 100%;
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
}

.mask-title {
  font-size: 32rpx;
  font-weight: 700;
  text-align: center;
  margin-bottom: 12rpx;
}

.status-img {
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto 16rpx;
  border-radius: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 700;
}

.status-img.ok {
  color: #047857;
  background: #d1fae5;
}

.status-img.fail {
  color: #b91c1c;
  background: #fee2e2;
}

.mask-msg {
  font-size: 28rpx;
  color: #374151;
  text-align: center;
  margin-bottom: 20rpx;
  word-break: break-all;
}

.error {
  margin-top: 16rpx;
  color: #b91c1c;
  word-break: break-all;
}
