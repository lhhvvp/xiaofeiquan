.my-coupon-page {
  min-height: 100vh;
  padding: 24rpx 24rpx 24rpx;
  background: linear-gradient(180deg, #ae000d 0%, #f7f7f7 280rpx, #f7f7f7 100%);
}

.notice {
  margin-top: 16rpx;
  padding: 16rpx;
  border: 1px dashed #f59e0b;
  background: #fffbeb;
  border-radius: 12rpx;
  color: #92400e;
  font-size: 26rpx;
}

.ticket-card {
  margin-top: 16rpx;
  padding: 22rpx;
  position: relative;
}

.ticket-card::before,
.ticket-card::after {
  content: '';
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background: #f7f7f7;
  top: 340rpx;
}

.ticket-card::before {
  left: -15rpx;
}

.ticket-card::after {
  right: -15rpx;
}

.now-text {
  font-size: 26rpx;
  font-weight: 600;
  color: #a00000;
  text-align: center;
  margin-bottom: 12rpx;
}

.title {
  font-size: 34rpx;
  font-weight: 600;
  text-align: center;
}

.price {
  margin-top: 8rpx;
  text-align: center;
  font-size: 31rpx;
  color: #a00000;
  font-weight: 600;
}

.time {
  margin-top: 10rpx;
  text-align: center;
  font-size: 24rpx;
  color: #666;
}

.qrcode-box {
  margin: 18rpx auto 0;
  width: 220px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.qrcode-canvas {
  width: 220px;
  height: 220px;
  background: #fff;
}

.qrcode-hint {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

.status-box {
  margin: 20rpx auto 0;
  width: 220px;
  min-height: 220px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.status-image {
  width: 100%;
  height: 100%;
}

.status-text {
  text-align: center;
  font-size: 28rpx;
  color: #666;
}

.user-info {
  margin-top: 18rpx;
  text-align: center;
  color: #a3a3a3;
}

.user-name {
  font-size: 34rpx;
  color: #a00000;
  line-height: 60rpx;
  font-weight: 600;
}

.user-idcard {
  font-size: 28rpx;
}

.row {
  margin-top: 18rpx;
  padding-top: 16rpx;
  border-top: 1px dashed #e5e7eb;
  display: flex;
  justify-content: space-between;
  gap: 16rpx;
}

.row-left {
  width: 120rpx;
  font-size: 28rpx;
  font-weight: 600;
}

.row-right {
  flex: 1;
  text-align: right;
  font-size: 25rpx;
  color: #666;
}

.card {
  margin-top: 16rpx;
  padding: 20rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.writeoff {
  font-size: 26rpx;
  color: #666;
  line-height: 44rpx;
}

.error {
  margin-top: 16rpx;
  color: #b91c1c;
  word-break: break-all;
}
