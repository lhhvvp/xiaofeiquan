.coupon-list-page {
  min-height: 100vh;
  padding: 0 24rpx 24rpx;
}

.notice {
  margin-top: 16rpx;
  padding: 16rpx;
  border: 1px dashed #f59e0b;
  background: #fffbeb;
  border-radius: 12rpx;
  color: #92400e;
  font-size: 26rpx;
}

.search-wrap {
  position: sticky;
  top: 0;
  z-index: 9;
  margin-top: 16rpx;
  padding: 16rpx;
  display: flex;
  gap: 12rpx;
  align-items: center;
}

.search-main {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 10rpx;
  background: #f5f5f5;
  border-radius: 999rpx;
  padding: 4rpx 20rpx;
}

.search-icon {
  color: #a00000;
  font-size: 24rpx;
}

.search-input {
  flex: 1;
  min-height: 64rpx;
  font-size: 28rpx;
}

.search-btn {
  margin: 0;
  min-width: 116rpx;
  background: #a00000;
  color: #fff;
}

.search-btn::after {
  border: none;
}

.empty {
  padding: 48rpx 0;
  text-align: center;
  color: #999;
}

.merchant-list {
  margin-top: 18rpx;
}

.item {
  padding: 24rpx 20rpx;
  display: flex;
  gap: 16rpx;
  justify-content: space-between;
  margin-bottom: 16rpx;
  align-items: center;
}

.left {
  flex: 1;
  min-width: 0;
}

.title {
  font-size: 31rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.addr {
  font-size: 24rpx;
  color: #6b7280;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.right {
  width: 140rpx;
  text-align: right;
}

.distance {
  font-size: 24rpx;
  color: #6b7280;
}

.arrow {
  font-size: 38rpx;
  color: #9ca3af;
  line-height: 1;
}
