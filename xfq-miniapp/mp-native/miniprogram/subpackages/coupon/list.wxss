.container {
  padding: 0 24rpx 24rpx;
}

.notice {
  margin-top: 16rpx;
  padding: 16rpx;
  border: 1px dashed #f59e0b;
  background: #fffbeb;
  border-radius: 12rpx;
  color: #92400e;
  font-size: 26rpx;
}

.search {
  position: sticky;
  top: 0;
  padding: 16rpx 0;
  background: #fff;
  display: flex;
  gap: 16rpx;
  align-items: center;
}

.search-input {
  flex: 1;
  background: #f5f5f5;
  border-radius: 16rpx;
  padding: 16rpx 20rpx;
  font-size: 28rpx;
}

.search-btn {
  background: #a00000;
  color: #fff;
}

.empty {
  padding: 48rpx 0;
  text-align: center;
  color: #999;
}

.item {
  background: #fff;
  border-bottom: 1px solid #efefef;
  padding: 24rpx 0;
  display: flex;
  gap: 16rpx;
  justify-content: space-between;
}

.title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.addr {
  font-size: 26rpx;
  color: #999;
}

.distance {
  font-size: 26rpx;
  color: #999;
}

.footer {
  padding: 24rpx 0;
  text-align: center;
  color: #999;
  font-size: 26rpx;
}
