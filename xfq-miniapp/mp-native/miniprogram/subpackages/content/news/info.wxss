.container {
  padding: 24rpx;
}

.notice {
  padding: 24rpx;
  color: #a00000;
  background: #fff5f5;
  border: 1px solid #ffd6d6;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.header {
  padding-bottom: 18rpx;
  border-bottom: 1px dashed #ddd;
}

.title {
  font-size: 38rpx;
  font-weight: 600;
  color: #222;
  line-height: 52rpx;
}

.meta {
  margin-top: 12rpx;
  display: flex;
  justify-content: space-between;
  color: #888;
  font-size: 24rpx;
}

.content {
  padding-top: 18rpx;
  font-size: 30rpx;
  line-height: 48rpx;
  color: #333;
}

