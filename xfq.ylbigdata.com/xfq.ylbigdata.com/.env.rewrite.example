# Python rewrite / Staging 环境变量模板（不要提交真实密钥）

# --- DB ---
DB_HOST=mysql
DB_PORT=3306
DB_USER=xfq
DB_PASSWORD=xfq
DB_NAME=xfq_v2
DB_CHARSET=utf8mb4

# --- Redis (optional) ---
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# --- Golden replay auth (dev-only; see .env.golden.example) ---
API_TOKEN=dev.dev.dev
API_USERID=1
WINDOW_TOKEN=dev.dev.dev
WINDOW_UUID=dev-window-uuid
SELFSERVICE_TOKEN=dev.dev.dev
SELFSERVICE_NO=dev-selfservice-no

# --- OTA (fill from secret manager) ---
XC_ACCOUNT_ID=CHANGEME
XC_SIGN_KEY=CHANGEME
XC_AES_KEY=CHANGEME
XC_AES_IV=CHANGEME

MEITUAN_CLIENT_ID=CHANGEME
MEITUAN_CLIENT_SECRET=CHANGEME
MEITUAN_PARTNER_ID=CHANGEME

# --- Payments (fill from secret manager) ---
WECHAT_APPID=CHANGEME
WECHAT_MCH_ID=CHANGEME
WECHAT_MCH_KEY=CHANGEME
WECHAT_NOTIFY_BASE_URL=https://example.com
WECHAT_CERT_CLIENT_PATH=/run/secrets/apiclient_cert.pem
WECHAT_CERT_KEY_PATH=/run/secrets/apiclient_key.pem

# --- Dev-only mocks (offline replay) ---
REWRITE_MOCK_WECHAT_PAY=1
REWRITE_MOCK_WECHAT_REFUND=1
REWRITE_MOCK_SMS=1
REWRITE_MOCK_IDENTITY=1

# --- Strict parity switches (default keep legacy 500 profile) ---
REWRITE_ENABLE_COUPON_GET_ISSUE_LIST=0
REWRITE_ENABLE_SCREEN_INDEX=0
REWRITE_ENABLE_NOTIFY_CALLBACKS=0
REWRITE_ENABLE_TICKET_NOTIFY_CALLBACKS=0
REWRITE_ENABLE_SELFSERVICE_TRAVEL_QRCODE=0
